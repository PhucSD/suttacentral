{
    "inherits": ["acro_to_name_and_uid_auto", "coded_name_auto", "meta", "uid",
        "folding_analyzers"],
    "index": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "analysis": {
                "char_filter": {
                    "denumber": {
                        "type": "pattern_replace",
                        "pattern": "[0-9][0-9.-]*",
                        "replacement": " "
                    }
                },
                "analyzer": {
                    "coded_analyzer": {
                        "tokenizer": "icu_tokenizer",
                        "char_filter": "coded_name_char_filter",
                        "filter": ["lowercase"]
                    }
                }
            }
        },
        "mappings": {
            "sutta": {
                "properties": {
                    "uid": {
                        "type": "string",
                        "index_analyzer": "uid_standard",
                        "search_analyzer": "uid_globbing",
                        "fields": {
                            "division": {
                                "type": "string",
                                "index_analyzer": "uid_prefix",
                                "search_analyzer": "standard"
                            }
                        }
                    },
                    "volpage": {
                        "type": "string",
                        "analyzer": "uid_standard"
                    },
                    "lang": {
                        "type": "string",
                        "analyzer": "uid_standard"
                    },
                    "name": {
                        "type": "string",
                        "fields": {
                            "plain": {
                                "type": "string",
                                "index_analyzer": "folding_analyzer",
                                "search_analyzer": "folding_shingle_analyzer"
                            },
                            "coded": {
                                "type": "string",
                                "analyzer": "coded_analyzer"
                            }
                        }
                    },
                    "boost": {
                        "type": "float"
                    }
                }
            }
        }
    }
}
