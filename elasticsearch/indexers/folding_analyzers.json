{
    "index": {
        "settings": {
            "analysis": {
                "filter": {
                    "compounder": {
                        "type": "shingle",
                        "token_seperator": " ",
                        "min_shingle_size": 2,
                        "max_shingle_size": 2,
                        "output_unigrams": true
                    },
                    "despacer": {
                        "type": "pattern_replace",
                        "pattern": " ",
                        "replacement": ""
                    },
                    "pali_normalize_filter": {
                        "type": "pattern_replace",
                        "pattern": "ṃ([gk])",
                        "replacement": "ṅ$1"
                    }
                },
                "analyzer": {
                    "folding_analyzer": {
                        "tokenizer": "icu_tokenizer",
                        "char_filter": ["denumber"],
                        "filter": ["pali_normalize_filter", "icu_folding"]
                    },
                    "folding_shingle_analyzer": {
                        "tokenizer": "icu_tokenizer",
                        "char_filter": ["denumber"],
                        "filter": ["pali_normalize_filter",
                                   "icu_folding",
                                    "compounder",
                                    "despacer"]
                    },
                    "pali_normalizer": {
                        "tokenizer": "keyword",
                        "filter": ["pali_normalize_filter"]
                    }
                }
            }
        }
    }
}
