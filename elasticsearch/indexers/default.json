{
    "index": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "analysis": {
                "filter": {
                    "sanskrit_pali_synonym": {
                        "type": "synonym",
                        "synonyms": [
                            "bhikkhu,bhiksu,bhiksu,bhikksu,biksu,monk => bhikkhu",
                            "bhikkhuni,bhiksuni,bhiksuni,bhikksuni,biksuni,nun => bhikkhuni",
                            "dhamma,dharma => dhamma",
                            "kamma,karma => kamma",
                            "nibbana,nirvana => nibbana"
                        ]
                    }
                },  
                "analyzer": {
                    "minimal": {
                        "tokenizer": "icu_tokenizer",
                        "filter": ["icu_normalizer", "lowercase"]
                    }
                }
            }
        },
        "mappings": {
            "text": {
                "properties": {
                    "uid": {
                        "type": "string",
                        "anaylzer": "keyword"
                    },
                    "lang": {
                        "type": "string",
                        "analyzer": "keyword"
                    },
                    "content": {
                        "type": "string",
                        "term_vector": "with_positions_offsets",
                        "analyzer": "minimal"
                    }
                }
            },
            "definition": {
                "properties": {
                    "entries": {
                        "type": "nested",
                        "properties": {
                            "content": {
                                "type": "string",
                                "term_vector": "with_positions_offsets",
                                "analyzer": "minimal"
                            },
                            "priority": {
                                "type": "integer"
                            },
                            "source": {
                                "type": "string",
                                "index": "not_analyzed"
                            }
                        }
                    },
                    "html_content": {
                        "type": "string",
                        "index": "no"
                    },
                    "term": {
                        "type": "string",
                        "index": "not_analyzed"
                    },
                    "gloss": {
                        "type": "string",
                        "index": "not_analyzed"
                    },
                    "number": {
                        "type": "integer"
                    }
                }
            },
            "meta": {
                "properties": {
                    "mtimes": {
                        "type": "object",
                        "enabled": false
                    }
                }
            }
        }
    }
}
