{
    "settings": {
        "analysis": {
            "filter": {
                "german_stop": {
                    "type":             "stop",
                    "stopwords":    "_german_" 
                },
                "german_stemmer": {
                    "type":             "stemmer",
                    "language":     "light_german"
                }
            },
            "analyzer": {
                "html_lang": {
                    "tokenizer":    "standard",
                    "filter": [
                        "lowercase",
                        "sanskrit_pali_synonym",
                        "german_stop",
                        "german_normalization",
                        "german_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "text": {
            "properties": {
                "content": {
                    "fields": {
                        "lang": {
                            "type": "string",
                            "term_vector": "with_positions_offsets",
                            "analyzer": "html_lang"
                        }
                    }
                }
            }
        }
    }
}
