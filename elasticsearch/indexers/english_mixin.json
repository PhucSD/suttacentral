{
    "settings": {
        "analysis": {
            "filter": {
                "english_stop": {
                    "type": "stop",
                    "stopwords": "_english_"
                },
                "english_possessive_stemmer": {
                    "type": "stemmer",
                    "language": "possessive_english"
                },
                "english_stemmer": {
                    "type": "stemmer",
                    "language": "english"
                }
            },
            "analyzer": {
                "html_lang": {
                    "tokenizer": "standard",
                    "char_filter": ["html_strip"],
                    "filter": [
                        "english_possessive_stemmer",
                        "lowercase",
                        "sanskrit_pali_synonym",
                        "english_stop",
                        "english_stemmer",
                        "icu_folding"
                    ]
                }
            }
        }
    },
    "mappings": {
        "text": {
            "properties": {
                "content": {
                    "fields": {
                        "lang": {
                            "type": "string",
                            "term_vector": "with_positions_offsets",
                            "analyzer": "html_lang"
                        }
                    }
                }
            }
        }
    }
}
